# ==============================================
# EditorConfig - Maintain consistent coding styles
# ==============================================
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

# TypeScript and JavaScript
[*.{ts,tsx,js,jsx,mjs,cjs}]
indent_size = 2
quote_type = double

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Rust files
[*.rs]
indent_size = 4
max_line_length = 100

# Cargo files
[Cargo.toml]
indent_size = 4

# SQL files
[*.sql]
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2
end_of_line = lf

# Makefiles require tabs
[Makefile]
indent_style = tab

# Package files
[{package.json,bun.lockb}]
indent_size = 2

# Ignore generated files
[*.min.*]
indent_style = ignore
insert_final_newline = ignore
