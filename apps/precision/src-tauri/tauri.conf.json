{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Precision",
  "version": "0.1.0",
  "identifier": "com.forerelic.truss.precision",
  "build": {
    "beforeDevCommand": "concurrently --kill-others-on-fail \"wait-on http://localhost:3000 && echo 'Auth server ready'\" \"bun run dev:vite\" \"cd ../.. && bun run dev:web\"",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Precision",
        "width": 1280,
        "height": 800,
        "minWidth": 1000,
        "minHeight": 600,
        "center": true,
        "resizable": true,
        "maximizable": true,
        "minimizable": true,
        "closable": true,
        "decorations": true,
        "transparent": false,
        "fullscreen": false,
        "focus": true,
        "visible": true,
        "skipTaskbar": false,
        "alwaysOnTop": false,
        "contentProtected": false,
        "hiddenTitle": false,
        "acceptFirstMouse": false,
        "tabbingIdentifier": null,
        "additionalBrowserArgs": "",
        "shadow": true,
        "windowEffects": null,
        "incognito": false,
        "parent": null,
        "titleBarStyle": "Visible"
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": false
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["truss"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
