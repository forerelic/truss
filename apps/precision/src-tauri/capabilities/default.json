{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "store:default",
    "deep-link:default",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "http://localhost:3000/**"
        },
        {
          "url": "http://localhost:3001/**"
        },
        {
          "url": "https://*.truss.forerelic.com/**"
        }
      ]
    }
  ]
}
