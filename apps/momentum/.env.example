# Momentum Desktop App Environment Variables
# Copy to .env.local and fill in your values
# See docs/ENVIRONMENT.md for detailed setup instructions

# Backend API (Required)
VITE_API_BASE_URL=http://localhost:3000
VITE_BETTER_AUTH_URL=http://localhost:3000

# Supabase (Required - must match web app config)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=

# App Metadata (Optional)
VITE_APP_NAME=Momentum
VITE_APP_VERSION=0.1.0

# Feature Flags (Optional)
VITE_ENABLE_REALTIME=true
VITE_ENABLE_OFFLINE_MODE=false
VITE_ENABLE_ANALYTICS=false

# Debug (Optional - set to false in production)
VITE_DEBUG_MODE=true
VITE_DEBUG_AUTH=true
