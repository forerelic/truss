# Momentum Native App Configuration
# Copy this file to .env for development
# IMPORTANT: .env is gitignored - safe to store sensitive config there

# ==============================================
# Next.js Backend URL (Points to Web App)
# ==============================================
# Local development: Use localhost
# Production: Use your deployed web app URL
VITE_API_BASE_URL=http://localhost:3000

# ==============================================
# Supabase Public Configuration (Safe to commit to .env.example)
# ==============================================
# Get from: https://supabase.com/dashboard/project/_/settings/api
# Must match web app configuration
VITE_SUPABASE_URL=https://your-project-ref.supabase.co
VITE_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# ==============================================
# App Metadata
# ==============================================
VITE_APP_NAME=Momentum
VITE_APP_VERSION=0.1.0

# ==============================================
# Feature Flags (Development)
# ==============================================
# Enable real-time collaboration via Supabase Realtime
VITE_ENABLE_REALTIME=true

# Enable offline mode (future feature)
VITE_ENABLE_OFFLINE_MODE=false

# Enable analytics tracking (future feature)
VITE_ENABLE_ANALYTICS=false

# ==============================================
# Development/Debug Settings
# ==============================================
# Show additional console logs and debug info
VITE_DEBUG_MODE=true

# Enable Better Auth debug logs in Tauri
VITE_DEBUG_AUTH=true
