{
  "name": "truss",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:web": "turbo run build --filter=@truss/web",
    "build:precision": "turbo run build --filter=@truss/precision",
    "build:momentum": "turbo run build --filter=@truss/momentum",
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@truss/web",
    "dev:precision": "turbo run dev --filter=@truss/precision",
    "dev:momentum": "turbo run dev --filter=@truss/momentum",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "clean": "turbo run clean",
    "cleanup-ports": "./scripts/cleanup-ports.sh",
    "============ DATABASE ============": "",
    "db:start": "bunx supabase start",
    "db:stop": "bunx supabase stop",
    "db:studio": "bunx supabase studio",
    "db:status": "bunx supabase status",
    "db:health": "bun run scripts/db-health-check.ts",
    "============ MIGRATIONS ============": "",
    "db:reset": "bunx supabase db reset",
    "db:push": "bun run scripts/db-push-safe.ts",
    "db:push:force": "bunx supabase db push",
    "db:push:dry": "bunx supabase db push --dry-run",
    "db:diff": "bunx supabase db diff",
    "db:validate": "bun run scripts/db-validate-migrations.ts",
    "db:migration:new": "bunx supabase migration new",
    "db:migration:create": "./scripts/db-migration-helper.sh",
    "db:migration:list": "bunx supabase migration list",
    "db:pull": "bun run scripts/db-pull-schema.ts",
    "============ BETTER AUTH ============": "",
    "auth:generate": "bun run scripts/generate-auth-migration.ts",
    "auth:test": "bun run scripts/test-better-auth.ts",
    "============ TYPES ============": "",
    "db:generate": "bun run scripts/db-generate-types.ts",
    "db:generate:local": "bun run scripts/db-generate-types.ts --local",
    "db:generate:remote": "bun run scripts/db-generate-types.ts --remote",
    "db:types:check": "bun run scripts/db-check-type-drift.ts",
    "============ ENVIRONMENT ============": "",
    "env:validate": "bun run scripts/validate-environment.ts",
    "env:validate:staging": "bun run scripts/validate-environment.ts --env staging",
    "env:validate:production": "bun run scripts/validate-environment.ts --env production",
    "============ SUPABASE PROJECT ============": "",
    "supabase:link": "bunx supabase link",
    "supabase:link:staging": "bunx supabase link --project-ref $STAGING_PROJECT_ID",
    "supabase:link:production": "bunx supabase link --project-ref $PRODUCTION_PROJECT_ID",
    "supabase:branches": "bunx supabase branches list",
    "============ CI/CD ============": "",
    "ci:test": "bun run lint && bun run check-types && bun run format:check",
    "ci:build": "bun run build",
    "precommit": "bun run ci:test",
    "============ RELEASES (Changesets - Automated) ============": "",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "release": "bun run changeset:version && bun run changeset:publish",
    "prepare": "husky"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "@types/pg": "^8.15.5",
    "concurrently": "^9.2.1",
    "esbuild": "~0.25.10",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "supabase": "^2.48.3",
    "turbo": "^2.5.8",
    "typescript": "5.9.2",
    "wait-on": "^9.0.1"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.4",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@daveyplate/better-auth-tauri": "^0.1.6",
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.74.0",
    "@tanstack/react-query": "^5.90.2",
    "better-auth": "^1.3.27",
    "pg": "^8.16.3"
  },
  "overrides": {
    "@types/react": "19.1.0",
    "@types/react-dom": "19.1.1"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
