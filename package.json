{
  "name": "truss",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:web": "turbo run build --filter=@truss/web",
    "build:precision": "turbo run build --filter=@truss/precision",
    "build:momentum": "turbo run build --filter=@truss/momentum",
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@truss/web",
    "dev:precision": "turbo run dev --filter=@truss/precision",
    "dev:momentum": "turbo run dev --filter=@truss/momentum",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "clean": "turbo run clean",
    "cleanup-ports": "./scripts/cleanup-ports.sh",
    "============ DATABASE ============": "",
    "db:start": "bunx supabase start",
    "db:stop": "bunx supabase stop",
    "db:studio": "bunx supabase studio",
    "db:status": "bunx supabase status",
    "db:health": "bun run scripts/db-health-check.ts",
    "============ MIGRATIONS ============": "",
    "db:reset": "bunx supabase db reset",
    "db:push": "bun run scripts/db-push-safe.ts",
    "db:push:force": "bunx supabase db push",
    "db:push:dry": "bunx supabase db push --dry-run",
    "db:diff": "bunx supabase db diff",
    "db:validate": "bun run scripts/db-validate-migrations.ts",
    "db:migration:new": "bunx supabase migration new",
    "db:migration:list": "bunx supabase migration list",
    "db:pull": "bun run scripts/db-pull-schema.ts",
    "============ BETTER AUTH ============": "",
    "auth:generate": "bun run scripts/generate-auth-migration.ts",
    "auth:test": "bun run scripts/test-better-auth.ts",
    "============ TYPES ============": "",
    "db:generate": "bun run scripts/db-generate-types.ts",
    "db:generate:local": "bun run scripts/db-generate-types.ts --local",
    "db:generate:remote": "bun run scripts/db-generate-types.ts --remote",
    "============ ENVIRONMENT ============": "",
    "env:validate": "bun run scripts/validate-environment.ts",
    "env:validate:staging": "bun run scripts/validate-environment.ts --env staging",
    "env:validate:production": "bun run scripts/validate-environment.ts --env production",
    "============ SUPABASE PROJECT ============": "",
    "supabase:link": "bunx supabase link",
    "supabase:link:staging": "bunx supabase link --project-ref $STAGING_PROJECT_ID",
    "supabase:link:production": "bunx supabase link --project-ref $PRODUCTION_PROJECT_ID",
    "supabase:branches": "bunx supabase branches list",
    "============ CI/CD ============": "",
    "ci:test": "bun run lint && bun run check-types && bun run format:check",
    "ci:build": "bun run build",
    "precommit": "bun run ci:test",
    "============ RELEASES ============": "",
    "version:bump": "bun run scripts/version-bump.ts",
    "version:web:patch": "bun run scripts/version-bump.ts web patch",
    "version:web:minor": "bun run scripts/version-bump.ts web minor",
    "version:web:major": "bun run scripts/version-bump.ts web major",
    "version:web:prerelease": "bun run scripts/version-bump.ts web prerelease",
    "version:precision:patch": "bun run scripts/version-bump.ts precision patch",
    "version:precision:minor": "bun run scripts/version-bump.ts precision minor",
    "version:precision:major": "bun run scripts/version-bump.ts precision major",
    "version:precision:prerelease": "bun run scripts/version-bump.ts precision prerelease",
    "version:momentum:patch": "bun run scripts/version-bump.ts momentum patch",
    "version:momentum:minor": "bun run scripts/version-bump.ts momentum minor",
    "version:momentum:major": "bun run scripts/version-bump.ts momentum major",
    "version:momentum:prerelease": "bun run scripts/version-bump.ts momentum prerelease",
    "changelog": "bun run scripts/generate-changelog.ts",
    "changelog:web": "bun run scripts/generate-changelog.ts web",
    "changelog:precision": "bun run scripts/generate-changelog.ts precision",
    "changelog:momentum": "bun run scripts/generate-changelog.ts momentum",
    "release:web": "bun run version:web:patch && bun run changelog:web && git push origin main --tags",
    "release:precision": "bun run version:precision:patch && bun run changelog:precision && git push origin main --tags",
    "release:momentum": "bun run version:momentum:patch && bun run changelog:momentum && git push origin main --tags",
    "release:manager": "bun run scripts/release-manager.ts",
    "release:create": "bun run scripts/create-release.ts",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "@types/pg": "^8.15.5",
    "concurrently": "^9.2.1",
    "esbuild": "~0.18.20",
    "prettier": "^3.6.2",
    "supabase": "^2.48.3",
    "turbo": "^2.5.8",
    "typescript": "5.9.2",
    "wait-on": "^9.0.1"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.4",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@daveyplate/better-auth-tauri": "^0.1.6",
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.74.0",
    "@tanstack/react-query": "^5.90.2",
    "better-auth": "^1.3.27",
    "pg": "^8.16.3"
  },
  "overrides": {
    "@types/react": "19.1.0",
    "@types/react-dom": "19.1.1"
  }
}
